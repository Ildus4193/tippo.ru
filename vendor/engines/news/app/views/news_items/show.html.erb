<div id="wrapper1">
  <aside>
    <h1>О Tippo</h1>
    <nav>
      <%= render :partial => 'pages/about_menu' %>
    </nav>
    <div class="aside-email-form">
      <div class="aside-email-top"></div>
      <div class="aside-email-middle">
        <p>
          Оставь свой e-mail и
          узнай первым!
        </p>
        <%= form_for Inquiry.new do |f| %>
            <%= f.required_label :name, "Ваше имя" %>
            <div class="error" id="error-name" >Укажите имя!</div>
            <%= f.text_field :name %>

            <%= f.required_label :email, "E-mail" %>
            <div class="error" id="error-email">Укажите e-mail!</div>
            <%= f.text_field :email %>
            <%= image_submit_tag "/img/blank.gif", :id=>"id_email_submit" %>
            </div>
            <div class="aside-email-bottom"></div>
            </div>
        <% end %>
        </aside>
  <section class="second-col news-detail-cont">
    <div class="hr-dashed"></div>
    <h2><%= @news_item.title %></h2>
    <article class="news_item">
      <p>
        <small>Опубликовано: <%= @news_item.publish_date.strftime("%d.%m.%Y %H:%M") %></small>

      </p>
      <%= @news_item.body.html_safe %>
      <p>
        <% if @prev_item %>
            <%= link_to "Предыдущая", :controller => "news_items", :action => "show", :id => @prev_item[:id] %>
        <% end %>
        &nbsp;
        <% if @next_item %>
            <%= link_to "Следующая", :controller => "news_items", :action => "show", :id => @next_item[:id] %>
        <% end %>
      </p>
    </article>
  </section>
  <div class="clear"></div>
</div>
<%= render :partial => 'pages/social' %>
