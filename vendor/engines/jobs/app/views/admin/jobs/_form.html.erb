<%= form_for [:admin, @job] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @job,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :description -%>
    <%= f.text_area :description, :rows => "20", :class => "wymeditor widest" -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.jobs.job'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @job.title)
              } %>
<% end -%>
