<li class='clearfix record <%= cycle("on", "on-hover") %>'>
  <span class='title'>
    <%= link_to "#{order.name} #{order.lastname}", admin_order_url(order) %>
    <span class="preview"><%= truncate(strip_tags("#{order.city} #{order.street}, #{order.house}. #{order.phone}"), :length => 60) -%></span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag('delete.png'), admin_order_url(order),
              { :method => :delete, 
                :confirm => t('shared.admin.delete.message', :title => order.name) },
                :class => "cancel confirm-delete",
                :title => t('admin.orders.delete') -%>

    <%= link_to refinery_icon_tag('zoom.png'), admin_order_url(order),
                :title => t('.read_order') -%>

    <% if order.spam? %>
      <%= link_to refinery_icon_tag('email.png'), toggle_spam_admin_order_url(order),
                  :title => t('.mark_as_ham') -%>
    <% else %>
      <%= link_to refinery_icon_tag('bin_closed.png'), toggle_spam_admin_order_url(order),
                  :title => t('.mark_as_spam') -%>
    <% end %>
  </span>
</li>
