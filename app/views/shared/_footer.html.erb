<HR align="center" WIDTH="100%" SIZE="10" color="#D1D2D4" style="position: relative; left: 20px;">
<div class="small-reklama-cont">
	<div class="small-reklama">
    <% unless Page.find_by_title("reklama").nil? %>
      <% Page.find_by_title("reklama").children.each_with_index do |reklama,i| %>
        <% box_border = if (i + 1) % 3 != 0 %>
          <% "border-right: 3px solid #D1D2D4;" %> 
        <% else %>
          <% "" %>
        <% end %>
        <div class="box reklama-box" style="<%= box_border %>">
          <div class="reklama-info">
            <h2><%= reklama.title %></h2>
            <%= raw reklama.content_for :body %>
          </div>
          <div class="box" >
            <%= raw reklama.content_for :image %>
          </div>
        </div>
        <% if i % 3 == 0 && i>0 %>
          <div class="clear"></div>
        <% end %>
      <% end %>
    <% end %>
	</div>
</div>
<div id="footer-buttom">
  <div id="footer-logo">
    <a href="/"></a>
  </div>
  <address>
    <p>
      <%=raw footer_address %>
    </p>
  </address>
  <div id="footer-phones">
    <p>
      <%=raw footer_phones %>
    </p>
  </div>
  <div id="footer-email">
    <p>
      <%=raw footer_email %>
    </p>
  </div>
</div>
